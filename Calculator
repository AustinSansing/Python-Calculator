# Below is a basic python calculator


# Basic Calulation
def calculate(n1,n2,op):
    if op == '+' :
        result = n1+n2
    elif op == '-' :
        result = n1-n2
    elif op == '*' :
        result = n1*n2
    elif op == '/' :
        result = n1/n2
    elif op == '^' :
        result = n1**n2
        
    return result

# Takes the user input of the first numbers and stores the value
number1 = float(input('Enter first number:'))
op = input('Enter operator (+,-,*,/,^): ')
# Takes the user input of the first number and stores the value
number2 = float(input('Enter second number: '))
print(number1,op,number2)

# Calculates the results of the two numbers given
result=calculate(number1,number2,op)
print('=',result)



